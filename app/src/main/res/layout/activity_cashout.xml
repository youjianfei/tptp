<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cashout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.kymart.shop.Activity.CashoutActivity">
    <RelativeLayout
        android:id="@+id/RelativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请提现"
            android:textSize="@dimen/top_title"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <com.kymart.shop.CustomView.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout_title"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/linearlayout_head"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@mipmap/userbg"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/user68"
                    />
                <TextView
                    android:id="@+id/textview_accountname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="姓名"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/textview_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="会员ID"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearlayout_cashout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_below="@+id/linearlayout_head"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="提现金额:"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/DarkGray"
                        />
                    <EditText
                        android:id="@+id/edit_money"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="3"
                        android:hint="最少提现额度50元"
                        android:textSize="15dp"
                        android:textColorHint="@color/LightGrey"
                        android:text=""
                        android:textColor="@color/blank"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:digits="0123456789."
                        android:singleLine="true"
                        android:background="@drawable/main_serchbackgroud"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="银行名称:"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/DarkGray"
                        />
                    <EditText
                        android:id="@+id/edit_bank"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="3"
                        android:hint="银行名称"
                        android:textSize="15dp"
                        android:textColorHint="@color/LightGrey"
                        android:text=""
                        android:textColor="@color/blank"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:background="@drawable/main_serchbackgroud"
                        />

                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="收款帐号:"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/DarkGray"
                    />
                <EditText
                    android:id="@+id/edit_banknumber"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:hint="请输入收款帐号"
                    android:textSize="15dp"
                    android:textColorHint="@color/LightGrey"
                    android:text=""
                    android:textColor="@color/blank"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@drawable/main_serchbackgroud"
                    />

            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="     开户名:"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/DarkGray"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:hint="请输入开户名"
                    android:textSize="15dp"
                    android:textColorHint="@color/LightGrey"
                    android:text=""
                    android:textColor="@color/blank"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:background="@drawable/main_serchbackgroud"
                    android:id="@+id/edit_name" />

            </LinearLayout>
                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_conner_5"
                    android:text="确认提交"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textColor="@color/blank"
                        android:text="编号"
                        android:textSize="14dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:textColor="@color/blank"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:text="申请日期"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textColor="@color/blank"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:text="金额"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textColor="@color/blank"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:text="状态"
                        />
                </LinearLayout>

                <com.kymart.shop.CustomView.MyListView
                    android:id="@+id/listview_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/textview_loadmore"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="加载更多"
                    android:textColor="@color/DarkGray"
                    android:gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>
    </com.kymart.shop.CustomView.CustomerScrollView>


</RelativeLayout>
