<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightGrey"
    tools:context="com.kymart.shop.Activity.FindPasswordActivity">
    <RelativeLayout
        android:id="@+id/REL_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/red">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="@dimen/top_title"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_margin="20dp"
        >
        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/phone"
            android:layout_margin="10dp"

            />
        <EditText
            android:id="@+id/edittext_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColorHint="@color/LightGrey"
            android:layout_toRightOf="@+id/image_phone"
            android:textSize="15dp"
            android:layout_marginTop="13dp"
            android:inputType="number"
            android:background="@null"
            />
        <TextView
            android:id="@+id/textview_yanzhengma"
            android:layout_width="70dp"
            android:layout_height="18dp"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="12dp"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/edittext_phonenumber"
            android:layout_alignParentRight="true"

            />
        <ImageView
            android:id="@+id/image_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/LightGrey"
            android:layout_below="@+id/image_phone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/image_yanzhengma"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/yanzhengma"
            android:layout_margin="10dp"
            android:layout_below="@+id/image_line1"

            />
        <EditText
            android:id="@+id/edit_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:textColorHint="@color/LightGrey"
            android:layout_toRightOf="@+id/image_phone"
            android:textSize="15dp"
            android:layout_marginTop="13dp"
            android:inputType="number"
            android:background="@null"
            android:layout_below="@+id/image_line1"
            />
        <ImageView
            android:id="@+id/image_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/LightGrey"
            android:layout_below="@+id/image_yanzhengma"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/image_password"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@mipmap/password"
            android:layout_below="@+id/image_line2"

            />
        <EditText
            android:id="@+id/edit_pas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:textColorHint="@color/LightGrey"
            android:layout_toRightOf="@+id/image_password"
            android:layout_below="@+id/image_line2"
            android:textSize="15dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:inputType="textPassword"
            />
        <ImageView
            android:id="@+id/image_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@color/LightGrey"
            android:layout_below="@+id/image_password"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />

        <ImageView
            android:id="@+id/image_passwordagain"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@mipmap/password"
            android:layout_below="@+id/image_line3"

            />
        <EditText
            android:id="@+id/pas_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:textColorHint="@color/LightGrey"
            android:layout_toRightOf="@+id/image_password"
            android:layout_below="@+id/image_line3"
            android:textSize="15dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:inputType="textPassword"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提  交"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_conner_5"
        />
</LinearLayout>
