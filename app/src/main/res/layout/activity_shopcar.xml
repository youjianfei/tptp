<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shopcar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kymart.shop.Activity.ShopcarActivity">
    <RelativeLayout
        android:id="@+id/RelativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="@dimen/top_title"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/add_shopCar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_conner_5"
        android:text="赶紧去逛逛吧"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        />

    <RelativeLayout
        android:id="@+id/rel_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/LightGrey"
        >
        <TextView
            android:id="@+id/text_jiesuan"
            android:background="@color/red"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="结算"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/text_allPrice"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="13dp"
            android:text="￥0.00"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/text_jiesuan"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textSize="13dp"
            android:text="不含运费"
            android:layout_toLeftOf="@+id/text_jiesuan"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/text_allPrice"
            android:layout_marginTop="2dp"
            />

    </RelativeLayout>
    <ListView
        android:id="@+id/Listview_shopcar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout_title"
        android:visibility="invisible"
        android:layout_above="@+id/rel_bottom"
        />
</RelativeLayout>
