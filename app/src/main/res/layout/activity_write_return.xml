<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_write_return"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kymart.shop.Activity.WriteReturnActivity">
    <RelativeLayout
        android:id="@+id/RelativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请售后"
            android:textSize="@dimen/top_title"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <com.kymart.shop.CustomView.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_title"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_goodsppic"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@mipmap/pay_alipay"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/textview_goodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:textSize="15dp"
                android:text="这里是填写商品信息的名字"
                android:layout_marginLeft="15dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/button_return"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/button_conner_5"
                    android:text="申请退货"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/blank"
                    android:text="问题描述"
                    android:layout_marginLeft="15dp"
                    />
                <EditText
                    android:id="@+id/textview_errostate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=""
                    android:hint="请详细说明退货原因"
                    android:textColorHint="@color/DarkGray"
                    android:textSize="15dp"
                    android:textColor="@color/DarkGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/background_red"
                    />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/DarkGray"
                android:textSize="15dp"
                android:text="问题图片"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                />
            <com.kymart.shop.CustomView.MyGridView
                android:id="@+id/gridview_erroPIC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:numColumns="3"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >


            </com.kymart.shop.CustomView.MyGridView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/blank"
                    android:text="寄回地址："
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/textview_returnaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这里是寄回地址"
                    android:textColor="@color/DarkGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/blank"
                    android:text="上班时间："
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/textview_worktime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这里是上班时间"
                    android:textColor="@color/DarkGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/blank"
                    android:text="客服电话："
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/textview_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这里是客服电话"
                    android:textColor="@color/DarkGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.kymart.shop.CustomView.CustomerScrollView>

</RelativeLayout>
